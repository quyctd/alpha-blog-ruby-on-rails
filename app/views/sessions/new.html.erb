<h1 class="text-center">Log in</h1>

<%= form_for( :session, url: login_path ) do |f| %>

  <div class="form-group">
    <%= f.label :email, for: "email" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email", id: "email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password, for: "password" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password", id: "password", autocomplete: "off" %>
  </div>

  <%= f.submit "Login", class: "btn btn-primary mb-2" %>
<% end %>