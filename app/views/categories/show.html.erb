<%= render 'shared/card_name', card_name: "Category: #{@category.name}" %>


<% if logged_in? and current_user.is_admin? %>
  <div class="row">
    <div class="col-md-2">
      <div class="card card-single">
        <%= link_to "Edit category", edit_category_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<% @category.articles.each do |article| %>
  <%= render 'articles/article_card', article: article %>
<% end %>

<div class="text-center">
  <%= will_paginate @category_articles %>
</div>