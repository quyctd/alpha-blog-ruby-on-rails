<h1>List article</h1>

<%= link_to "Create new article", new_article_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
            <%= link_to "Edit", edit_article_path(article) %>
            <%= link_to "Read", article_path(article) %>
        </td>
    </tr>
    <% end %>
</table>