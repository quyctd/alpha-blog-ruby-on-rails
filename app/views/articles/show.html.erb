
<h1 class="text-center"><%= @article.title %> </h1>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2>Author: </h2>
    <div class="text-center">
      <%= gravatar_for @article.user %>
      <p class="head"><%= @article.user.username %></p>
    </div>
    <h2>Description:</h2>
    <p class="lead"><%= @article.description %></p>
    <hr>

    <% if @article.categories.any? %>
      <p>Categories: <%= render @article.categories %></p>
    <% end %>

    <% if logged_in? and (current_user == @article.user or current_user.is_admin?) %>
      <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
      <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger btn-sm" %>
    <% end %>

    <%= link_to "View all articles", articles_path, class: "btn btn-success btn-sm" %>
  </div>
</div>