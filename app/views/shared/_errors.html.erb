<% if obj.errors.any? %>
    <div class="card alert alert-danger" role="alert">
        <div class="card-heading">
            <h2 class="card-title">
                <%= pluralize(obj.errors.count, "error") %> prohibited this article from being saved:
            </h2>
        </div>
        <div class="card-body">
            <ul>
                <% obj.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>